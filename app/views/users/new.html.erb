<div class="container">
  <% if @count %>
    <h1>Signup new user</h1>
    <%= form_for @user do |f| %>
      <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </p>
      <p>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </p>
      <%= f.submit "Create" %>
    <% end %>
    <% else %>
      <h1>Too many users</h1>
  <% end %>
</div>
