<h1>New Blog Post</h1>
<%= form_for :blogpost, url: blogposts_path do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
<hr />
<%= link_to 'Back to Index', blogposts_path %>
