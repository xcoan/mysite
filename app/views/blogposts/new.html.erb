<h1>New Blog Post</h1>
<%= form_for :blogpost, url: blogposts_path do |f| %>

<% if @blogpost.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@blogpost.errors.count, "error") %>
      </h2>
      <ul>
        <% @blogpost.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
<hr />
<%= link_to 'Back to Index', blogposts_path %>
